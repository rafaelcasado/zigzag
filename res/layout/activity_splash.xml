<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f00">

    <ImageView
        android:id="@+id/splash_cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/zigzzag_banner" />

    <ImageView
        android:id="@+id/splash_pie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/alfasurcabecera" />    
    
    <Button
        android:id="@+id/splash_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/splash_pie"
        android:text="@string/splash_boton" />

</RelativeLayout>